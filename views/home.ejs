<link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
<style>
  body {
    font-family: 'Poppins', sans-serif;
    background: url("/images/13086.jpg") no-repeat center center fixed;
    background-size: cover;
    color: #f1f1f1;
    scroll-behavior: smooth;
  }
  h1,h2,a {
    color: #e0e0e0 !important;
  }
  .hero-section h1 span {
    background: linear-gradient(135deg, #00ffe7, #6c63ff);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    font-weight: 800;
    animation: pulse 2s infinite ease-in-out;
  }
  @keyframes pulse {
    0%, 100% { transform: scale(1); }
    50% { transform: scale(1.05); }
  }
  .hero-section .container {
    backdrop-filter: blur(8px);
    padding: 2.5rem;
    border-radius: 30px;
    background-color: rgba(0, 0, 0, 0.5);
    box-shadow: 0 12px 40px rgba(0, 0, 0, 0.7);
    transition: transform 0.3s ease;
  }
  .hero-section .container:hover {
    transform: scale(1.02);
  }
  a.btn.club-button {
    padding: 0.8rem 1.6rem;
    font-weight: 600;
    border-radius: 50px;
    background: rgba(255, 255, 255, 0.05);
    backdrop-filter: blur(8px);
    border: 2px solid #17ebe8;
    transition: all 0.3s ease;
    box-shadow: 0 0 15px rgba(23, 235, 232, 0.5);
    position: relative;
    overflow: hidden;
  }
  a.btn.club-button:hover {
    background: #17ebe8;
    color: #000 !important;
    transform: translateY(-5px);
  }
  a.btn.club-button::after {
    content: "";
    position: absolute;
    width: 300%;
    height: 300%;
    top: 50%;
    left: 50%;
    pointer-events: none;
    background: radial-gradient(circle, rgba(255,255,255,0.3) 10%, transparent 10.01%);
    transform: translate(-50%, -50%) scale(0);
    opacity: 0;
    transition: transform 0.6s ease-out, opacity 1s ease;
  }
  a.btn.club-button:active::after {
    transform: translate(-50%, -50%) scale(1);
    opacity: 1;
    transition: 0s;
  }
  .container.section.text-center {
    background-color: rgba(0, 0, 0, 0.5);
    padding: 3rem 2rem;
    border-radius: 30px;
    box-shadow: 0 0 25px rgba(255, 255, 255, 0.15);
    margin-top: 80px;
    transition: all 0.3s ease;
  }
  .container.section.text-center:hover {
    box-shadow: 0 0 30px rgba(255, 255, 255, 0.25);
  }
  .container.section.text-center h2 {
    font-weight: 700;
    color: #fff;
    font-size: 2.2rem;
  }
  .container.section.text-center p {
    color: #ccc;
    font-size: 1.15rem;
    margin-top: 1.2rem;
    line-height: 1.6;
  }
  .about-section {
    background: rgba(255, 255, 255, 0.03);
    border: 1px solid rgba(255, 255, 255, 0.08);
    padding: 3rem 2rem;
    border-radius: 30px;
    margin-top: 80px;
    box-shadow: 0 0 25px rgba(255, 255, 255, 0.08);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }
  .about-section:hover {
    transform: translateY(-5px);
    box-shadow: 0 0 40px rgba(255, 255, 255, 0.2);
  }
  .about-heading {
    font-size: 2.4rem;
    color: #e0e0e0;
    margin-bottom: 1rem;
  }
  .about-description {
    font-size: 1.15rem;
    color: #bbb;
    margin-bottom: 1.2rem;
    line-height: 1.7;
  }
  .about-description .highlight {
    color: #17ebe8;
    font-weight: 600;
  }
  .hero-section h1, .hero-section p {
    opacity: 0;
    transform: translateY(30px);
    animation: fadeInUp 1s ease forwards;
  }
  .hero-section p { animation-delay: 0.3s; }
  @keyframes fadeInUp {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  .floating-particles {
    position: fixed;
    top: 0; left: 0;
    width: 100%; height: 100%;
    pointer-events: none;
    z-index: -1;
    background: radial-gradient(circle at 30% 30%, rgba(0,255,255,0.05), transparent 40%),
                radial-gradient(circle at 70% 70%, rgba(108,99,255,0.05), transparent 40%);
    animation: backgroundMove 20s linear infinite;
  }
  @keyframes backgroundMove {
    0% { background-position: 0 0, 100% 100%; }
    100% { background-position: 100% 100%, 0 0; }
  }

  .homeChatBot{
    position: fixed;
    z-index: 999;
    bottom: 100px;
  }
</style>
