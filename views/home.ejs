<script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
<script>
  AOS.init({ duration: 1000, once: true });
  const cards = document.querySelectorAll(".card-edit");
  cards.forEach(card => {
    const cardElement = card.querySelector(".styled-card");
    card.addEventListener("mousemove", (e) => {
      const rect = card.getBoundingClientRect();
      const x = e.clientX - rect.left;
      const y = e.clientY - rect.top;
      const moveX = (x - rect.width / 2) / 30;
      const moveY = (y - rect.height / 2) / 30;
      cardElement.style.backgroundPosition = `${50 + moveX}% ${50 + moveY}%`;
    });
    card.addEventListener("mouseleave", () => {
      cardElement.style.backgroundPosition = "center center";
    });
  });
</script>
