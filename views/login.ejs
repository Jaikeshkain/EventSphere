<%- include("partials/header.ejs", { title: title, user }) %>
    <!DOCTYPE html>
    <html lang="en">

    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Login</title>
        <!-- Link to custom styles -->
        <link rel="stylesheet" href="/stylesheets/style.css">
        <script src="/javascripts/script.js"></script>

        <!-- FontAwesome for icons -->
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css"
            integrity="sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg=="
            crossorigin="anonymous" referrerpolicy="no-referrer" />
        <!-- Google Fonts (Roboto & Poppins) -->
        <link
            href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&family=Roboto:wght@400;500&display=swap"
            rel="stylesheet">
</head>

<body>
    <div class="authentication">
        <div class="loginpage" id="loginpage">
            <div class="userbg"><i class="fa-solid fa-user user"></i></div>
            <h1 id="loginTitle">Login</h1>
            <form action="/auth/login" id="loginForm" method="post">
                <input type="email" name="email" id="email" required placeholder="Email"><br>
                <input type="password" name="password" required id="password" placeholder="Password"><br>
                <p class="forgot-password" style="cursor: pointer;">Forgot password?</p>
                <input type="submit" value="Login">
            </form>
            <div class="oauth-login">
                <p>or</p>
                <a href="/auth/google" class="google-btn">
                    <i class="fab fa-google"></i> Sign in with Google
                </a>
            </div>
        </div>
        <button class="registerBtn" id="signup">SignUp?</button>
        <div class="registerpage collapsed" id="registerpage">
            <h1 id="registerTitle">Register</h1>
            <form action="/auth/register" id="registerForm" method="post">
                <input type="text" name="username" id="username" required placeholder="User Name"><br>
                <input type="email" required name="email" id="email" placeholder="Email"><br>
                <input type="password" required name="password" id="password" placeholder="Password"><br>
                <input type="submit" value="Register">
            </form>
        </div>
        <button class="registerBtn" id="signin">SignIn?</button>
    </div>
</body>
</html>